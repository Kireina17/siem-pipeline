[Unit]
Description=Apache Kafka
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/dahfa/kafka
ExecStart=/home/dahfa/kafka/bin/kafka-server-start.sh /home/dahfa/kafka/config/kraft/server.properties
ExecStop=/home/dahfa/kafka/bin/kafka-server-stop.sh
Restart=always

[Install]
WantedBy=multi-user.target
