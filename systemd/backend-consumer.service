[Unit]
Description=SIEM Backend Kafka Consumer
After=network.target kafka.service redis-server.service postgresql.service

[Service]
Type=simple
User=root
WorkingDirectory=/home/dahfa
ExecStart=/home/dahfa/siem-env/bin/python /home/dahfa/backend_consumer.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
